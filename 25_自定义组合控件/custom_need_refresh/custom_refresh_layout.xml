<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0000"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/crl_refresh_img_area"
            android:layout_width="150dp" android:layout_height="150dp"
            android:layout_marginTop="50dp">
			<!-- 不动的小图 -->
        <ImageView
                android:focusableInTouchMode="false"
                android:id="@+id/crl_bulb"
                android:layout_width="54dp" android:layout_height="77dp"
                android:src="@drawable/light_bulb" android:scaleType="fitXY"
                android:layout_centerInParent="true"/>
				<!-- 旋转大图-->
        <ImageView android:focusableInTouchMode="false"
                   android:id="@+id/crl_refresh_arrow"
                   android:layout_width="110dp" android:layout_height="110dp"
                   android:src="@drawable/refresh" android:scaleType="fitXY"
                   android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
        <Button android:layout_width="120dp" android:layout_height="40dp"
                android:id="@+id/crl_refresh_btn"
                android:text="@string/dianjishuaxin"
                android:layout_centerInParent="true"
                android:textColor="#9333"
                android:background="@drawable/button_bg_common"/>
    </RelativeLayout>
</LinearLayout>