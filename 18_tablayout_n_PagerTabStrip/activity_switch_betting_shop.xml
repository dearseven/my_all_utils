<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
             >

    <include
            android:id="@+id/tb"
            layout="@layout/base_toolbar"></include>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                           android:id="@+id/asbs_vp"
                                           android:layout_height="match_parent">

            <android.support.v4.view.PagerTabStrip android:layout_width="match_parent"
                                                   android:id="@+id/asbs_pts"
                                                   android:layout_height="40dp">

            </android.support.v4.view.PagerTabStrip>
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</LinearLayout>
