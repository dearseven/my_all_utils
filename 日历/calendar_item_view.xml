<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/calendar_item_whole_bg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:layout_margin="2dp"
                android:orientation="vertical">

    <!-- android:background="@drawable/corner_circle" -->
    <ImageView
            android:id="@+id/calendar_item_bgi"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"
    />

    <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/calendar_item_day"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="30"/>


        <TextView
                android:id="@+id/calendar_item_des"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:padding="1dp"
                android:textColor="#000000"
                android:visibility="gone"
                android:text="休息"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/calendar_item_des1"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:padding="1dp"
                android:textColor="#000000"
                android:text="休息1"/>
    </LinearLayout>

</RelativeLayout>