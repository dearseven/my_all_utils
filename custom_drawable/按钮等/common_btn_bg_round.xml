<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
            <solid android:color="#2222" />

            <stroke android:width="0dp" android:color="#5555" />

            <corners android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp" android:topLeftRadius="35dp" android:topRightRadius="35dp" />
        </shape>
    </item>
    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
            <solid android:color="#0eee" />

            <stroke android:width="1dp" android:color="#5555" />

            <corners android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp" android:topLeftRadius="35dp" android:topRightRadius="35dp" />
        </shape>
    </item>
    <!-- 初始状态 -->
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
            <solid android:color="#0eee" />

            <stroke android:width="1dp" android:color="#5555" />

            <corners android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp" android:topLeftRadius="35dp" android:topRightRadius="35dp" />
        </shape>
    </item>
</selector>