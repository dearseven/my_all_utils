<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2F77" />
            <corners android:radius="45dp" />
        </shape>
    </item>
    <!-- 先画一个A色的矩形 -->
    <item
            android:top="1dp"
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#5F77" />
            <corners android:radius="45dp" />
        </shape>
    </item>

    <!--画一个B色的矩形，这个时候就变成有-->
    <item
            android:top="2dp"
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/_red" />
            <corners android:radius="45dp" />
        </shape>
    </item>
</layer-list>