<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxx.xxx.activity.orders.MyOrdersActivity">

    <include
        android:id="@+id/tb"
        layout="@layout/base_toolbar"></include>

    <!--
    tabPaddingEnd和tabPaddingStart让tab的customview可以填充满整个布局
    -->
    <android.support.design.widget.TabLayout
        android:id="@+id/aOrderTabLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:tabPaddingTop="0dp"
        app:tabPaddingBottom="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#853">

    </android.support.v4.view.ViewPager>
</LinearLayout>
